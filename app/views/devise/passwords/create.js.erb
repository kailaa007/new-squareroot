<% if @not_found.present? %>
$(".forgot-email-id").addClass("input-box-error");
$("#password-error").html("User doesn't exist.");
$("#password-error").addClass("error");
setTimeout(function(){
        $("#password-error").removeClass('error');
        $("#password-error").html('');
}, 5000);
<% else %>
$("#password-error").html("You will receive an email with instructions on how to reset your password in a few minutes.");
$("#password-error").addClass("alert-success");
<% end %>