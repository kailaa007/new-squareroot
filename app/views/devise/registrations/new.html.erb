<div class="form-inputs main_form_box">
  <h2 class="form_head">SIGN UP NOW</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true,
           :html => {:id => "sign_up_user"},
           :format => :json,
           :remote => true) do |f| %>
    <%= f.error_notification %>
    <div class="mr_btm">
      <div class="one-half">
        <%= f.input :first_name, required: true, label: false, placeholder: 'First Name', :input_html => {:class => "input_box1" } %>
      </div>
      <div class="one-half">
        <%= f.input :last_name, required: true, label: false, placeholder: 'Last Name', :input_html => {:class => "input_box2" } %>
      </div>
    </div>
    <div class="one-full">
      <%= f.input :email, required: true, label: false, placeholder: 'email', :input_html => {:class => "input_box3" }  %>
    </div>
    <div class="one-half">
      <%= f.input :password, required: true, label: false , placeholder: 'Password', :input_html => {:class => "input_box4" } %>
    </div>
    <div class="one-half">
      <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Confirm Password', :input_html => {:class => "input_box5" } %>
    </div>
    <div class="one-half">
      <%= f.input :zipcode, required: true, label: false, placeholder: 'Zip code', :input_html => {:class => "input_box6" }, as: :string %>
    </div>
    <div class="one-half">
      <%= f.input :due_date, required: true, label: false, placeholder: 'Due Date', :input_html => {:class => "due_date input_box7 datepicker" }, as: :string %>
    </div>
    <div class="one-full">
      <label class="term_class">
      <%= f.check_box :terms_n_condition, required: true %>I agree to the Terms of use and Privacy Statement 
      </label>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
    <div class="one-full">
      <p>Have an Account? <a href="/users/sign_in" style="color: #f4c553;margin-left: 10px;">LOG IN</a></p>
    </div>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>  
