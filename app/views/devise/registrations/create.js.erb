<% resource.errors.each do |k, v| %>
	$("#signup-error").html("<%=  v == 'has already been taken' ? 'This email id has already been registered.' : v %>");
	$("#signup-error").html("<%=  v == 'is too short (minimum is 6 characters)' ? 'Password is too short (minimum is 6 characters)' : v %>");
	$("#signup-error").addClass("error");
	setTimeout(function(){
            $("#signup-error").removeClass('error');
            $("#signup-error").html('');
    }, 10000);
<% end %>
<% if resource.errors.blank? %>
$("#signup-success").hide();
$(".forms-popup").addClass("signup-success-main");
$("#signup-success-msg").show();
window.location.replace("/profile");
<% end %>