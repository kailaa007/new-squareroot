/ Login Modal
#loginModal.loginModalmodal.modal.fade{:role => "dialog"}
  .modal-dialog{ :style => "width: 60%"}
    / Modal content
    .modal-content
      %button.close{"data-dismiss" => "modal", :type => "button"} × 
      .modal-body
        .form-inputs.main_form_box_l
          %h2.form_head Log in
          = simple_form_for(resource, as: resource_name, url: user_session_path, validate: true, :html => {:id => "sign_in_user"}) do |f|
            = f.error_notification
            #errors-list
            .one-full
              = f.input :email, autofocus: true, label: false, placeholder: 'Email'
            .one-full
              = f.input :password, label: false, placeholder: 'Password'
            .one-full
              %span.term_class.squaredThree1
                = f.check_box :remember_me, :id => "squaredThree1", :class => "input_box1"
                %label{:for => "squaredThree1"}
                Remember me?
            .form-actions
              = f.button :submit, "Log in"
            .one-full
              %p
                %a{"data-target" => "#signupModal", :type => "button", :style => "color: #f4c553;margin-left: 10px;", :class => "cls_modal"} SIGN UP
                %a{"data-target" => "#fgModal", :type => "button", :style => "color: #f4c553;margin-left: 10px;", :class => "cls_modal"} FORGET PASSWORD    
                %a{"data-target" => "#recoverModal", :type => "button", :style => "color: #f4c553;margin-left: 10px;", :class => "cls_modal"} RESEND CONFIRMATION INSTRUCTION

/ Signup Modal
#signupModal.modal.signupModalmodal.fade{:role => "dialog"}
  .modal-dialog{ :style => "width: 60%"}
    / Modal content
    .modal-content
      %button.close{"data-dismiss" => "modal", :type => "button"} ×
      .modal-body
        .form-inputs.main_form_box
          %h2.form_head SIGN UP NOW
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f|
            = f.error_notification
            .mr_btm
              .one-half
                = f.input :first_name, required: true, label: false, placeholder: 'First Name', :input_html => {:class => "input_box1" }
              .one-half
                = f.input :last_name, required: true, label: false, placeholder: 'Last Name', :input_html => {:class => "input_box2" }
            .one-full
              = f.input :email, required: true, label: false, placeholder: 'Email', :input_html => {:class => "input_box3" }
            .one-half
              = f.input :password, required: true, label: false , placeholder: 'Password', :input_html => {:class => "input_box4" }
            .one-half
              = f.input :password_confirmation, required: true, label: false, placeholder: 'Confirm Password', :input_html => {:class => "input_box5" }
            .one-half
              = f.input :zipcode, required: true, label: false, placeholder: 'Zip code', :input_html => {:class => "input_box6" }, as: :string 
            .one-half
              = f.input :due_date, required: true, label: false, placeholder: 'Due Date', :input_html => {:class => "due_date input_box7 datepicker" }, as: :string 
            .one-full
              %span.term_class.squaredThree
                = f.check_box :terms_n_condition, id: "squaredThree"
                %label{:for => "squaredThree"}
                I agree to the Terms of use and Privacy Statement                
            .form-actions
              = f.button :submit, "Sign up"
            .one-full
              %p
                Have an Account?
                %a{"data-target" => "#loginModal", :type => "button", :style => "color: #f4c553;margin-left: 10px;", :class => "cls_modal"}LOG IN

/ forget password Modal
#fgModal.modal.fade{:role => "dialog"}
  .modal-dialog{ :style => "width: 60%"}
    / Modal content
    .modal-content
      %button.close{"data-dismiss" => "modal", :type => "button"} × 
      .modal-body
        .form-inputs.main_form_box
          %h2.form_head Forgot your password?
          = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, validate: true) do |f|
            = f.error_notification
            = f.input :email, required: true, autofocus: true, label:false, placeholder:"Email"
