<script type="text/javascript">
    $(document).ready(function(){
        $("#termofuse-content").customScrollbar();
    });        
    $(".forms-popup").on('click', function() {
        $('form[data-validate]').enableClientSideValidations();
        $("#loginForm").validationEngine();
        $("#signUpForm").validationEngine({validateNonVisibleFields: true,
        updatePromptsPosition:false});
        $("#forgetPasswordForm").validationEngine();
    });
</script>