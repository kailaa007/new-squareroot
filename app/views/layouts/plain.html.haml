<!--[if IE 9]><html class="lt-ie10" lang="en" > <![endif]-->
%html{ :lang => "en", :class => 'no-js' }
  %head
    %title= title
    %meta{ :charset => "utf-8" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    %meta{ :name => "keywords", :content => meta_keywords }
    %meta{ :name => "description", :content => meta_description }
    = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "modernizr"
    = javascript_include_tag "requisites"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/gsap/latest/TweenMax.min.js"
    =javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
    = csrf_meta_tags

  %body{ :class => "#{params[:controller].split('/').last} #{params[:action]}" }
    = yield
    = javascript_include_tag "application"

  #loginModal.modal.fade{:role => "dialog"}
  .modal-dialog{ :style => "width: 60%"}
    / Modal content
    .modal-content
      %button.close{"data-dismiss" => "modal", :type => "button"} Ã— 
      .modal-body
        .form-inputs.main_form_box_l
          %h2.form_head Log in
          = simple_form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f|
            .one-full
              = f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email'
            .one-full
              = f.input :password, required: true, label: false, placeholder: 'Password'
            .one-full
              %span.term_class.squaredThree1
                = f.check_box :remember_me, :id => "squaredThree1", :class => "input_box1"
                %label{:for => "squaredThree1"}
                Remember me?
            .form-actions
              = f.button :submit, "Log in"
            .one-full
              %p
                %a{"data-target" => "#signupModal", "data-toggle" => "modal", :type => "button", :style => "color: #f4c553;margin-left: 10px;"} SIGN UP
                %a{"data-target" => "#fgModal", "data-toggle" => "modal", :type => "button", :style => "color: #f4c553;margin-left: 10px;"} FORGET PASSWORD    
                %a{"data-target" => "#recoverModal", "data-toggle" => "modal", :type => "button", :style => "color: #f4c553;margin-left: 10px;"} RESEND CONFIRMATION INSTRUCTION
      


