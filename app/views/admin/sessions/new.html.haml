.row
  .columns.small-12.medium-6.medium-centered
    %h3 Login
    = simple_form_for :session, url: admin_sessions_path do |f|
      = f.input :username
      = f.input :password
      = link_to "forgot password", new_admin_password_reset_path
      = f.button :button, 'Login', :class => 'button radius pull-right'