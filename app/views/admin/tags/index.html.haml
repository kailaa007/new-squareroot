.row
  .columns.small-12
    = link_to 'New', new_admin_tag_path, :class => 'button radius pull-right secondary'
    %h2 Tags

    %table
      %thead
        %tr
          %th Name
          %th{ width: '20%' }

      %tbody
        - @tags.each do |tag|
          %tr
            %td= tag.name
            %td.actions
              = link_to 'Edit', edit_admin_tag_path(tag)
              = link_to 'Delete', admin_tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }
        %tr
          %td{:colspan => "4"}= will_paginate @tags